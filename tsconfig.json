{
	"compilerOptions": {
		"target": "es2017",
		/* Modules */
		"module": "esnext",
		"moduleResolution": "node",
		/* Emit */
		"declaration": true,
		"noEmit": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["es2019", "es2017", "dom"],
		"noImplicitAny": true,
		"noUnusedLocals": true,
		// "noUnusedParameters": true,
		"strictNullChecks": true,
		/* Type Checking */
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"experimentalDecorators": true,
		/* Completeness */
		"skipLibCheck": true,
		/* Performance Optimizations */
		"incremental": true,
		"assumeChangesOnlyAffectDirectDependencies": true,
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"exclude": ["node_modules", "dist", "types", "out", ".next", ".turbo", "**/*.test.ts", "**/*.spec.ts", "src/contracts"],
	"include": ["global.d.ts", "src"]
}
